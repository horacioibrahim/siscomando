<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ppacs.siscomando" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Siscomando</name>
    <description>
        Toda a comunicação para os problemas de alto impacto do negócio em um só lugar..
    </description>
    <author email="horacioibrahim@gmail.com" href="http://twitter.com/horacioibrahim">
        Horacio Ibrahim
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon_ldpi.png" density="ldpi" />
        <icon src="res/android/icon_mdpi.png" density="mdpi" />
        <icon src="res/android/icon_hdpi.png" density="hdpi" />
        <icon src="res/android/icon_xhdpi.png" density="xhdpi" />
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/land_screen_hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/land_screen_ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/land_screen_mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/land_screen_xhdpi.png" density="land-xhdpi"/>

        <splash src="res/screen/android/port_screen_hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/port_screen_ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/port_screen_mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/port_screen_xhdpi.png" density="port-xhdpi"/>    
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
